@model IEnumerable<QCapp.ViewModels.AuditViewModel>

@{
    ViewData["Title"] = "User List";
    Layout = null;
}

<span class="section">@ViewBag.Title</span>
<div class="table-responsive">
    <table class="table table-striped jambo_table bulk_action">
        <thead>
            <tr class="headings">
                <th>
                    <input type="checkbox" id="check-all" class="flat">
                </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.AuditName) </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.AuditStartDate) </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.AuditEndDate) </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.AuditTypeName) </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.QuestionBatch) </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.AuditDueDate) </th>
                <th class="column-title no-link last">
                    <span class="nobr">Action</span>
                </th>
                <th class="bulk-actions" colspan="7">
                    <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                </th>
            </tr>
        </thead>

        <tbody>
            @{
                int rowNo = 0;
                foreach (var item in Model)
                {
                    <tr class="@(rowNo%2 == 0 ? "even" : "odd") pointer">
                        <td class="a-center "><input type="checkbox" class="flat" name="table_records"></td>
                        <td>@item.AuditName</td>
                        <td>@item.AuditStartDate</td>
                        <td>@item.AuditEndDate</td>
                        <td>@item.AuditTypeName</td>
                        <td>@item.QuestionBatch</td>
                        <td>@item.AuditDueDate</td>
                        <td class=" last">
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>

                    rowNo++;
                }
            }
        </tbody>
    </table>
</div>