@model IEnumerable<QCapp.Models.SchemaViewModel.ClientViewModel>

@{
    ViewData["Title"] = "Client List";
    Layout = "~/Views/Shared/_LayoutIn.cshtml";
}

<div class="table-responsive">
    <table class="table table-striped jambo_table bulk_action">
        <thead>
            <tr class="headings">
                <th>
                    <input type="checkbox" id="check-all" class="flat">
                </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.ClientName) </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.ClientCode) </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.CompanyName) </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.ClientEmailAddress) </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.ActiveStatus) </th>
                <th class="column-title">@Html.DisplayNameFor(model => model.WorkFlowName) </th>
                <th class="column-title no-link last">
                    <span class="nobr">Action</span>
                </th>
                <th class="bulk-actions" colspan="7">
                    <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                </th>
            </tr>
        </thead>

        <tbody>
            @{
                int rowNo = 0;
                foreach (var item in Model)
                {
                    <tr class="@(rowNo%2 == 0 ? "even" : "odd") pointer">
                        <td class="a-center "><input type="checkbox" class="flat" name="table_records"></td>
                        <td>@item.ClientName</td>
                        <td>@item.ClientCode</td>
                        <td>@item.CompanyName</td>
                        <td>@item.ClientEmailAddress</td>
                        <td>@item.ActiveStatus</td>
                        <td>@item.WorkFlowName</td>
                        <td class=" last">
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>

                    rowNo++;
                }
            }
        </tbody>
    </table>
</div>